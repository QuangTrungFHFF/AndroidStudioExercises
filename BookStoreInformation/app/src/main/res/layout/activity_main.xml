<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/butter_cream"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bookPic"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/book_open"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/bookstoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhà Sách Bình Minh"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/marigold"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookPic" />
    <TextView
        android:id="@+id/bookstoreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/rust"
        app:layout_constraintTop_toBottomOf="@id/bookstoreName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/bookstoreEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: hotro@nhasachphuongnam.com"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/rust"
        app:layout_constraintTop_toBottomOf="@id/bookstoreDetail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>