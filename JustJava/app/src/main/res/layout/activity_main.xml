<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:hint="Name"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topping_label"
        android:text="TOPPINGS"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_edit_text" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:id="@+id/topping_checkbox_cream"
        android:text="Whipped Cream"
        app:layout_constraintTop_toBottomOf="@id/topping_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textAlignment="center"
        android:padding="0dp"
        android:layout_marginTop="8dp"
        android:onClick="hasToppingCheck"/>

    <CheckBox
        android:id="@+id/topping_checkbox_chocolate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginLeft="16dp"
        android:onClick="hasToppingCheck"
        android:padding="0dp"
        android:text="Chocolate"
        android:textAlignment="gravity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topping_checkbox_cream" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_label"
        android:text="QUANTITY"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topping_checkbox_chocolate" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decrement_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="-"
        android:layout_marginLeft="16dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/quantity_textview"
        app:layout_constraintTop_toBottomOf="@id/quantity_label"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_textview"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/quantity_label"
        app:layout_constraintLeft_toRightOf="@id/decrement_button"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/increment_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="+"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/quantity_textview"
        app:layout_constraintTop_toBottomOf="@id/quantity_label"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_label"
        android:text="PRICE"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/quantity_textview"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_textview"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/price_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oder_button"
        android:text="ORDER"
        android:layout_marginLeft="16dp"
        android:onClick="submitOrder"
        app:layout_constraintTop_toBottomOf="@id/price_textview"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView >